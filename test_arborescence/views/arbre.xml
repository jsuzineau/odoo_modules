<?xml version="1.0"?>
<odoo>
    <record id="test_arborescence_arbre_action" model="ir.actions.act_window">
        <field name="name">arbre</field>
        <field name="res_model">test_arborescence.arbre</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="test_arborescence_arbre_view_tree" model="ir.ui.view">
        <field name="name">test_arborescence.arbre.tree</field>
        <field name="model">test_arborescence.arbre</field>
        <field name="arch" type="xml">
            <tree string="arbre">
              <field name="Name" />
              <field name="Parent" /> 
              <field name="Enfants" /> 
            </tree>
        </field>
    </record>
    <record id="test_arborescence_arbre_view_form" model="ir.ui.view">
        <field name="name">test_arborescence.arbre.form</field>
        <field name="model">test_arborescence.arbre</field>
        <field name="arch" type="xml">
            <form string="arbre">
                <sheet>
                    <group>
              <field name="Name" />
              <field name="Parent" /> 
              <field name="Enfants" /> 
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
