<?xml version="1.0"?>
<odoo>
    <record id="paperformat_euro_lowmargin" model="report.paperformat">
        <field name="name">European A4 low margin</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">80</field>
    </record>
    <record id="report_action_jour" model="ir.actions.report">
        <field name="name">report_jour</field>
        <field name="model">jsworks.jour</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">jsworks.report_template_jour</field>
        <field name="report_file">jsworks.jour_templates</field>
        <field name="print_report_name">'Jour_print_report_name'</field>
        <field name="paperformat_id" ref="jsworks.paperformat_euro_lowmargin"/>
        <field name="binding_model_id" ref="model_jsworks_jour"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
