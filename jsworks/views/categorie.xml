<?xml version="1.0"?>
<odoo>
    <record id="a_jsworks_categorie" model="ir.actions.act_window">
        <field name="name">Catégorie</field>
        <field name="res_model">jsworks.categorie</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="jsworks_categorie_view_tree" model="ir.ui.view">
        <field name="name">jsworks.categorie.tree</field>
        <field name="model">jsworks.categorie</field>
        <field name="arch" type="xml">
            <tree string="Catégories">
              <field name="Symbol" />
              <field name="Description" /> 
<!--views_class_py_many_to_one_field_line-->
<!--views_class_py_one_to_many_field_line-->
            </tree>
        </field>
    </record>
    <record id="jsworks_categorie_view_form" model="ir.ui.view">
        <field name="name">jsworks.categorie.form</field>
        <field name="model">jsworks.categorie</field>
        <field name="arch" type="xml">
            <form string="Catégorie">
                <sheet>
                    <group>
                      <field name="Symbol" />
                      <field name="Description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
