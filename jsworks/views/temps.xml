<?xml version="1.0"?>
<odoo>
    <record id="a_jsworks_temps" model="ir.actions.act_window">
        <field name="name">Temps</field>
        <field name="res_model">jsworks.temps</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="jsworks_temps_view_tree" model="ir.ui.view">
        <field name="name">jsworks.temps.tree</field>
        <field name="model">jsworks.temps</field>
        <field name="arch" type="xml">
            <tree string="Temps">
              <field name="partner_id" />
              <field name="Debut" />
              <field name="Fin" />
              <field name="Description" />
            </tree>
        </field>
    </record>
    <record id="jsworks_temps_view_form" model="ir.ui.view">
        <field name="name">jsworks.temps.form</field>
        <field name="model">jsworks.temps</field>
        <field name="arch" type="xml">
            <form string="Temps">
                <header>
                    <button name="action_Connecte_Works" type="object" string="Connecte_Works"  />
                    <button name="action_Facture" type="object" string="Facture"  />
                    <button type="action" name="%(jsworks.report_action_temps)d" string="Print"/>
                </header>
                <sheet>
                    <group>
                        <field name="partner_id" />
                        <field name="Debut" />
                        <field name="Fin" />
                        <field name="Description" />
                    </group>
                    <notebook>
                        <page string="Works">
                            <field name="Works" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
