<?xml version="1.0"?>
<odoo>
    <record id="jsworks_state_action" model="ir.actions.act_window">
        <field name="name">State</field>
        <field name="res_model">jsworks.state</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="jsworks_state_view_tree" model="ir.ui.view">
        <field name="name">jsworks.state.tree</field>
        <field name="model">jsworks.state</field>
        <field name="arch" type="xml">
            <tree string="States">
              <field name="Symbol" />
              <field name="Description" /> 
            </tree>
        </field>
    </record>
    <record id="jsworks_state_view_form" model="ir.ui.view">
        <field name="name">jsworks.state.form</field>
        <field name="model">jsworks.state</field>
        <field name="arch" type="xml">
            <form string="State">
                <sheet>
                    <group>
                      <field name="Symbol" />
                      <field name="Description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
