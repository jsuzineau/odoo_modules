<?xml version="1.0"?>
<odoo>
    <record id="a_jsworks_jour" model="ir.actions.act_window">
        <field name="name">Jour</field>
        <field name="res_model">jsworks.jour</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="jsworks_jour_view_tree" model="ir.ui.view">
        <field name="name">jsworks.jour.tree</field>
        <field name="model">jsworks.jour</field>
        <field name="arch" type="xml">
            <tree string="Jours">
              <field name="D" />
            </tree>
        </field>
    </record>
    <record id="jsworks_jour_view_form" model="ir.ui.view">
        <field name="name">jsworks.jour.form</field>
        <field name="model">jsworks.jour</field>
        <field name="arch" type="xml">
            <form string="Jour">
                <header>
                    <button name="action_Connecte_Works" type="object" string="Connecte_Works"  />
                    <button type="action" name="%(jsworks.report_action_jour)d" string="Print"/>
                </header>
                <sheet>
                    <group>
                        <field name="D" />
                    </group>
                    <notebook>
                        <page string="Works">
                            <field name="Works" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
