<?xml version="1.0"?>
<odoo>
    <record id="a_jsworks_type_tag" model="ir.actions.act_window">
        <field name="name">Type Tag</field>
        <field name="res_model">jsworks.type_tag</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="jsworks_type_tag_view_tree" model="ir.ui.view">
        <field name="name">jsworks.type_tag.tree</field>
        <field name="model">jsworks.type_tag</field>
        <field name="arch" type="xml">
            <tree string="Type_tags">
              <field name="Name" /> 
            </tree>
        </field>
    </record>
    <record id="jsworks_type_tag_view_form" model="ir.ui.view">
        <field name="name">jsworks.type_tag.form</field>
        <field name="model">jsworks.type_tag</field>
        <field name="arch" type="xml">
            <form string="Type_tag">
                <sheet>
                    <group>
                      <field name="Name" />
                    </group>
                    <notebook>
                        <page string="Tags">
                            <field name="Tags" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
